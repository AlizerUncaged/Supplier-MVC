
<html>
<head>
    <link rel="icon" href="favicon.ico?v=2" />
    <title>Home Page</title>
    <!-- JavaScript Bundle with Popper -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</head>

<body>
    <div class="container mt-4">
        <h2>Edit Users</h2>
        <table class="data-table table">
            <tr class="data-heading">
                @{
                    //  ViewData["Products"]
                    foreach (var prop in typeof(Supplier_MVC.Models.Product).GetProperties())
                    {
                        <td>@string.Concat(prop.Name.Select(x => Char.IsUpper(x) ? " " + x : x.ToString())).TrimStart(' ')</td>
                    }
                }

                <td>action</td>

            </tr>

            @{
                var properties = typeof(Supplier_MVC.Models.Product).GetProperties();
                foreach (var j in (ViewData["Products"] as IEnumerable<Supplier_MVC.Models.Product>))
                {
                    <tr>
                        @foreach (var i in properties)
                        {
                            <td>@i.GetValue(j, null)</td>
                        }
                        <td>
                            <button onclick="AddName('@j.Name', '@j.ProductId')" type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#editModal">Edit</button>
                        </td>
                        <td>
                            <button onclick="Delete('@j.Name', '@j.ProductId')" type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
                        </td>
                    </tr>
                }
            }
        </table>
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#editModal">Add Product</button>
    </div>

    <script>
        function AddName(username, id) {
            document.getElementById("name").value = username;
            document.getElementById("productId").value = id;
        }
        function Delete(username, id) {
            document.getElementById("productId_2").value = id;
        }
    </script>
    <iframe name="dummyframe" id="dummyframe" style="display: none;"></iframe>
    <!-- Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form onsubmit="location.reload();" target="dummyframe" action="./add" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="label">Edit Item</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        @{
                            foreach (var j in properties.Where(x => !x.Name.ToLower().Contains("date") && !x.Name.ToLower().Contains("id") && !x.Name.ToLower().Contains("quantity")))
                            {
                                var lowered = j.Name.ToLower();
                                <div class="mb-3">
                                    <label class="form-label">@string.Concat(j.Name.Select(x => Char.IsUpper(x) ? " " + x : x.ToString())).TrimStart(' ')</label>
                                    <input id="@lowered" type="text" name="@lowered" class="form-control">
                                </div>
                            }
                        }
                        <input value="-1" id="productId" type="hidden" name="id" class="form-control">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form onsubmit="location.reload();" target="dummyframe" action="./remove" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="label">Remove Item...?</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <input value="-1" id="productId_2" type="hidden" name="id" class="form-control">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>